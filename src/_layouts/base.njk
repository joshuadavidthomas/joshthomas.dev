<!doctype html>
<html lang="en-us" class="text-gray-900 bg-gray-50 dark:text-gray-100 dark:bg-gray-900">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or site.title }}</title>
		<meta name="description" content="{{ description or site.description }}">
    <meta name="author" content="{{ author or site.author }}">
		<meta name="generator" content="{{ eleventy.generator }}">
		<link rel="alternate" href="/blog/feed/atom.xml" type="application/atom+xml" title="{{ site.title }}">
    {%- getBundle "html", "preload" %}
		<style>{% getBundle "css" %}</style>
    <link rel="stylesheet" href="/assets/css/style.css">
    <script data-goatcounter="https://joshthomasdev.goatcounter.com/count"
            async
            src="//gc.zgo.at/count.js"></script>
    {%- js %}
      var t = setInterval(function() {
          if (window.goatcounter && window.goatcounter.visit_count) {
              clearInterval(t)
              window.goatcounter.visit_count({ append: '#pageStats' })
          }
      }, 100)
    {% endjs %}
	</head>
	<body class="px-2">
    <header class="flex justify-between items-baseline max-w-2xl mx-auto w-full">
      <div>
        <h1 class="text-2xl font-bold font-brico">
          <a href="/" preload="mouseover">Josh Thomas</a>
        </h1>
        {% set navPages = collections.all | eleventyNavigation %}
        <nav class="flex gap-4 items-center text-sm">
          {%- for entry in navPages %}
            <a href="{{ entry.url }}" class="uppercase hover:text-blue-500 hover:underline underline-offset-4 decoration-1">
              {{ entry.title }}
            </a>
          {%- endfor %}
          <a href=
        </nav>
      </div>
      <div class="flex items-center gap-2">
        {%- for item in site.social %}
          <a href={{ item.url }}{% if item.title == "Mastodon" %} rel="me"{% endif %}>
            <span class="sr-only">{{ item.title }}</span>
            {{ item.icon | safe }}
          </a>
        {%- endfor %}
          <a href="/blog/feed/">
            <span class="sr-only">RSS</span>
            <svg class="size-4 xs:size-6 p-0.5 hover:text-[#FFA500]" role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" height='24' width='24'>
              <title>RSS</title>
              <path fill="currentColor" d="M19.199 24C19.199 13.467 10.533 4.8 0 4.8V0c13.165 0 24 10.835 24 24h-4.801zM3.291 17.415c1.814 0 3.293 1.479 3.293 3.295 0 1.813-1.485 3.29-3.301 3.29C1.47 24 0 22.526 0 20.71s1.475-3.294 3.291-3.295zM15.909 24h-4.665c0-6.169-5.075-11.245-11.244-11.245V8.09c8.727 0 15.909 7.184 15.909 15.91z"/>
            </svg>
          </a>
      </div>
    </header>
		<main id="skip" class="w-full">
      {{ content | safe }}
		</main>
		<script type="module" src="{% getBundleFileUrl "js" %}"></script>
	</body>
</html>
