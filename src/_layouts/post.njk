---
class:
  main: w-full
layout: default
---

{%- html "preload" %}
  <link rel="preload"
        href="/static/fonts/monolisa-v2.015/0-normal.woff2"
        as="font"
        type="font/woff2"
        crossorigin>
  <link rel="preload"
        href="/static/fonts/monolisa-v2.015/1-italic.woff2"
        as="font"
        type="font/woff2"
        crossorigin>
{%- endhtml %}
<article class="max-w-none prose xl:prose-xl dark:prose-invert grid grid-container-2xl prose-pre:grid-bleed-7xl prose-a:hover:text-blue-500">
  <header class="not-prose mb-8 max-w-2xl"
          style="view-transition-name: post-{{ title | slugify }}">
    <h2 class="text-3xl tracking-tight text-gray-800 sm:text-4xl dark:text-gray-100">{{ title | markdownify | safe }}</h2>
    <time datetime="{{ page.date | dateToHtmlString }}"
          class="flex items-baseline gap-2 mt-4 text-sm font-medium text-gray-700 dark:text-gray-200">
      <i class="fa-solid fa-calendar-day size-4 text-gray-700 dark:text-gray-300"></i>
      {{ page.date | dateToFormat("LLLL d, yyyy") }}
    </time>
  </header>
  {{ content | safe }}
</article>
